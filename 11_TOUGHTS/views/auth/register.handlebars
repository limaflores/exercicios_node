<div class="auth-container">
    <h2>Registrar</h2>
    <form action="/register" method="POST">
        <div class="form-control">
            <label for="name">Nome:</label>
            <input type="text" name="name" id="name" placeholder="Digite o seu nome" required>    
        </div>
        <div class="form-control">
            <label for="email">E-mail:</label>
            <input type="email" name="email" id="email" placeholder="Digite o seu e-mail" required>
        </div>
        <div class="form-control">
            <label for="password">Senha:</label>
            <input type="password" name="password" id="email" placeholder="Digite a sua senha" required>
        </div>
        <div class="form-control">
            <label for="confirmpassword">Cofirmação de senha:</label>
            <input type="password" name="confirmpassword" id="email" placeholder="Confirme a sua senha" required>
        </div>
        <input type="submit" value="Cadastrar">
        <p>Ja possui uma conta? <a href="/login">Entrar</a></p>
    </form>
</div>